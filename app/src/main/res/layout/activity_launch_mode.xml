<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/btn_start_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start standard activity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_start_singleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start singleTop activity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_start_singleTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start singleTask activity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_start_singleInstance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start singleInstance activity"
        android:textAllCaps="false"/>
</LinearLayout>